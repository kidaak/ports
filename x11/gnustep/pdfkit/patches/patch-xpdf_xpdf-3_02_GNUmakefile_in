-	CC=@CC@ CXX=@CXX@ ./configure --without-x \
+	CC=@CC@ CXX=@CXX@ CPPFLAGS=@CPPFLAGS@ LDFLAGS=@LDFLAGS@ ./configure --without-x \
 	    --with-freetype2-library=$(LIB_FREETYPE_LIBS) \
 	    --with-freetype2-includes=$(LIB_FREETYPE_INCLUDES) 
 
